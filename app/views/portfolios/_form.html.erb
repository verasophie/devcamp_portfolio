<%= form_for(@portfolio_item) do |form| %>
  <% if @portfolio_item.errors.any? %>
    <%= @portfolio_item.errors.full_messages.each do |error| %>
      <%= js add_gritter(flash[:notice], title: "Hej Dude", sticky: false) %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="btn btn-secondary">
          Titelbild <%= form.file_field :main_image %>
        </label>
      </div>
      <div class="form-group">
        <label class="btn btn-secondary">
          Kachel <%= form.file_field :thumb_image, style:'display:none;' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 13 %>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <h2>Stärken</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render "technology_fields", form: technology_form %>
        <% end %>
      <div>
        <%= link_to_add_association 'Disziplin hinzufügen', form, :technologies %>
      </div>
    </div>
    <div class="actions">
      <%= form.submit 'Eintrag speichern', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>