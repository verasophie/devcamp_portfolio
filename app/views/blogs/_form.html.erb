<%= form_for(blog) do |form| %>
  <% if blog.errors.any? %>
    <%= blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(flash[:notice], title: "Hej Dude", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: "form-control", placeholder: 'Titel' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: "form-control", rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>